@{
    ViewBag.Title = "Home Page";
}
<body>
    <div class="jumbotron">
        <h2>Find Events. Create events. In Ohio!</h2>
    </div>

    <div class="row">
        
    </div>


    <div id="find">
        <h5>Find An Event</h5>
        @using (Ajax.BeginForm("Search", "Home",
            new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "GET",
                OnFailure = "searchFailed",
                LoadingElementId = "ajax-loader",
                UpdateTargetId = "searchresults"
            }))
        {
            <input type="text" name="p" placeholder="Event or Event Type" />
            <input type="text" name="q" placeholder="City or State" />
            <input type="submit" value="search" />
            <img id="ajax-loader"
                 src="@Url.Content("~/Content/Images/ajax-loader.gif")"
                 style="display:none" />
        }
        <div id="searchresults"></div>
    </div>

    <div id="deals">
        @Ajax.ActionLink("Click Here to See Last Minute Deals!",
        "LastMinuteDeals",
        null,
        new AjaxOptions
        {
            UpdateTargetId = "lastminutedeals",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "GET"
        },
        new { @class = "btn btn-primary" })

        <div id="lastminutedeals"> </div>
    </div>
</body>


@section Scripts{

    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}