
@{
    ViewBag.Title = "Index";
}

<h2>Find An Event</h2>

<div class="panel panel-default">
    <div class="panel-body">
        @using (Ajax.BeginForm("EventSearch", "FindEvent",
            new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "GET",
                OnFailure = "searchFailed",
                LoadingElementId = "ajax-loader",
                UpdateTargetId = "searchresults"
            }))
        {
            
        }

        @using (Ajax.BeginForm("LocationSearch", "FindEvent",
            new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "GET",
                OnFailure = "searchFailed",
                LoadingElementId = "ajax-loader",
                UpdateTargetId = "searchresults"
            }))
        {
            <input type="text" name="p" placeholder="Event or Event Type" />
            <input type="text" name="q" placeholder="City or State" />
            <input type="submit" value="search" />
            <img id="ajax-loader"
                 src="@Url.Content("~/Content/Images/ajax-loader.gif")"
                 style="display:none" />
        }
        <div id="searchresults"></div>
    </div>
</div>

@section Scripts{

    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}

